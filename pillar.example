              - delay_before_retry: 3
          192.168.200.3 1358:
            weight: 1
            HTTP_GET:
              - url:
                  path: /testurl/test.jsp
                  digest: 640205b7b0fc66c1ea91c463fac6334c
              - url:
                  path: /testurl2/test.jsp
                  digest: 640205b7b0fc66c1ea91c463fac6334c
              - connect_timeout: 3
